@using System.Net;
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    <style type="text/css">
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        .page {
            page-break-after: always;
            height: 201mm;
            display: block;
        }

        div.table {
            height: 161mm;
            display: block;
        }

        .footer {
            width: 100%;
            display: block;
            position: fixed;
            bottom: 0;
            height: 65px;
        }
    </style>
</head>
<body>
    @foreach (var page in Model.Pages)
    {
        <div class="page ">
            <div class="row">
                <div class="col-xs-12 text-center"><h1><strong>@Model.Organization.Name</strong></h1></div>
            </div>
            <div class="row">
                <div class="col-xs-10">
                    <div class="row">
                        <div class="col-xs-12">
                            <h1>Distribution Report</h1>
                        </div>
                    </div><div class="row">
                        <div class="col-xs-6">
                            <h5><strong>Program Name:&nbsp;</strong>@Model.Distribution.Title</h5>
                            <h5><strong>Fund Code:&nbsp;</strong>@Model.Distribution.FundCodes</h5>
                            <h5><strong>Distribution Code:&nbsp;</strong>@Model.Distribution.Id.ToString("D6")</h5>
                        </div>
                    </div>
                </div>
                <div class="col-xs-2">
                    <img src="@Model.Organization.LogoSVG" class="img-responsive pull-right" style="width: 2cm" />
                </div>
            </div>
            <div class="table">
                <table class="table table-striped table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Beneficiary Name</th>
                            <th>Sex</th>
                            <th>Id Number</th>
                            <th>Phone Number</th>
                            <th>Location</th>
                            <th>Voucher Code</th>
                            <th>Voucher Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < page.Items.Length; i++)
                        {
                            var item = page.Items[i];
                            <tr>
                                <td>@(((page.Page - 1) * Model.PageSize) + i + 1)</td>
                                <td>@item.Name</td>
                                <td>@item.Sex</td>
                                <td>@item.NationalId</td>
                                <td>@item.MobileNumber</td>
                                <td>@item.Location</td>
                                <td>@item.VoucherCode</td>
                                <td>@Model.Country.CurrencyIsoCode @item.Value</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        @if (page.Items.Length > 1)
                        {
                            <tr>
                                <th colspan="7" class="text-right">Subtotal</th>
                                <th>@Model.Country.CurrencyIsoCode @page.SubTotal</th>
                            </tr>
                        }
                        @if (page.IsLastPage)
                        {

                            <tr>
                                <th colspan="7" class="text-right">Total</th>
                                <th>@Model.Country.CurrencyIsoCode @Model.Total</th>
                            </tr>
                        }
                    </tfoot>
                </table>
            </div>
            @if (page.IsLastPage)
            {
                <div id="footer">
                    
                </div>
            }

            <div class="row">
                <div class="col-xs-4">
                    Report Generated By:&nbsp;@Model.User.FullName
                </div>
                <div class="col-xs-4 text-center">
                    Page @page.Page of @Model.Pages.Count()
                </div>
                <div class="col-xs-4 text-right">
                    Date Report Generated: @DateTime.Now.ToString()
                </div>
            </div>
        </div>
    }
</body>
</html>
